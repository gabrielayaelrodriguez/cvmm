<p id="notice"><%= notice %></p>

<h1>Virtual Machines</h1>

<%= search_form_for @search, url: admin_virtual_machines_path do |f| %>
  <%= f.label :name_cont %>
  <%= f.search_field :name_cont %>
  <%= f.submit %>
<% end %>


<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>State</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @virtual_machines.each do |virtual_machine| %>
      <tr>
        <td><%= virtual_machine.name %></td>
        <td><%= virtual_machine.state %></td>
        <td><%= link_to 'Show', admin_virtual_machine_path(virtual_machine) %></td>
        <td><%= link_to 'Destroy', admin_virtual_machine_path(virtual_machine), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= paginate @virtual_machines %>