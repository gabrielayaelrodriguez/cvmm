<div class="center-align">

<h1><%= t('.virtual_machines') %></h1>

</div>
<div class="row">
<%= search_form_for @search, url: admin_virtual_machines_path do |f| %>
    <div class="row">

    <div class="field col s4">
      <%= f.label t('.name_cont') %>
      <%= f.search_field :name_cont %>
    </div>
    <div class="input-field col s4">
      <%= f.submit t('.search'), :class => 'grey waves-effect waves-light btn' %>
    </div>

  </div>
<% end %>
</div>

<table>
  <thead>
    <tr>
      <th><%= sort_link(@search, :name, t('.name'), default_order: :desc) %></th>
      <th><%= sort_link(@search, :state, t('.state'), default_order: :desc) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @virtual_machines.each do |virtual_machine| %>
      <tr>
        <td><%= virtual_machine.name %></td>
        <td><%= virtual_machine.state %></td>
        <td><%= link_to 'Show', admin_virtual_machine_path(virtual_machine) %></td>
        <td><%= link_to 'Destroy', admin_virtual_machine_path(virtual_machine), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="center-align">

<%= paginate @virtual_machines %>

</div>

<br><br>

<%= link_to t('.back'), admin_dashboard_index_path %>

