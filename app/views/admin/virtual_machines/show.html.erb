<div class="center-align">
  <h3><%= t('.virtual_machine')%></h3>
  <p>
    <strong><%= t('.name')%></strong>
    <%= @virtual_machine.name %>
  </p>
  <p>
    <strong><%= t('.state')%></strong>
    <%= I18n.t("possible_states.#{@virtual_machine.state}")%>
  </p>
  <p>
    <strong><%= t('.os')%></strong>
    <%= @virtual_machine.os %>
  </p>
  <p>
    <strong><%= t('.memory')%></strong>
    <%= @virtual_machine.memory %>
  </p>
  <p>
    <strong><%= t('.cores')%></strong>
    <%= @virtual_machine.cores %>
  </p>

  <h2><%= t('.disks')%></h2>

  <table class="table">
    <tr>
      <th><%= t('.label')%></th>
      <th><%= t('.model')%></th>
      <th><%= t('.capacity')%></th>
      <th></th>
      <th></th>
    </tr>
    <% @virtual_machine.disks.each do |disk| %>
        <tr>
          <td><%= disk.label %></td>
          <td><%= disk.model %></td>
          <td><%= disk.capacity %></td>

          <td><%= link_to I18n.t('.show'), admin_virtual_machine_disk_path(@virtual_machine, disk) %></td>

        </tr>
      <% end %>
    </table>


  <br>
</div>

<%= link_to I18n.t('.back'), admin_virtual_machines_path %>

<br><br>
