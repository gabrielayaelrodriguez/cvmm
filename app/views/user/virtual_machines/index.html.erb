<p id="notice"><%= notice %></p>

<h1>Virtual Machines</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>State</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @virtual_machines.each do |virtual_machine| %>
      <tr>
        <td><%= virtual_machine.name %></td>
        <td><%= virtual_machine.state %></td>
        <td><%= link_to 'Show', user_virtual_machine_path(virtual_machine) %></td>
        <td><%= link_to 'Edit', edit_user_virtual_machine_path(virtual_machine) %></td>
        <td><%= link_to 'Destroy', user_virtual_machine_path(virtual_machine), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

